<body>
    <div class="container">
        <h2>üìö Grade Tracker & Estimator</h2>
        
        <div class="subject-table-section">
            <div class="subject-header">
                <div>Subject Name</div>
                <div>Total Possible Points</div>
                <div>Min. Expected Points</div>
                <div>Max. Expected Points</div>
                <div class="delete-header">Del</div>
            </div>

            <div id="subjects-container"></div>
        </div>

        <button id="add-subject-btn">+</button>
        <p id="error-message" class="error"></p>
        
        <div class="instruction-note">
            üí°Tip: If you are certain of a subject's points (e.g., a final grade is already recorded), enter the same value in both the [Minimum Expected Points] and [Maximum Expected Points] columns to lock in that score.
        </div>
        
        <div class="calc-area">
            <h3>System Settings & Calculation</h3>
            
            <div class="input-group">
                <label for="gs-points">Overall Grading System Points (GS):</label>
                <input type="number" id="gs-points" value="100" min="1" step="0.01" required>
                <small>The max possible score on your final scale (e.g., 100 or 4.0).</small>
            </div>
            
            <div class="input-group">
                <label for="passing-threshold">Passing Percentage Required (out of 100%):</label>
                <input type="number" id="passing-threshold" value="50" min="0" max="100" step="0.01" required>
                <small>The minimum percentage required to achieve a passing grade.</small>
            </div>
            
            <button onclick="runCalculations()">Calculate Final Estimates</button>

            <div id="results">
                </div>
        </div>
    </div>

    <script>
        // --- DATA AND CONSTANTS ---
        const MAX_SUBJECTS = 30;
        let subjectCount = 0;
        
        // --- DOM ELEMENT REFERENCES ---
        const subjectsContainer = document.getElementById('subjects-container');
        const addButton = document.getElementById('add-subject-btn');
        const errorMessage = document.getElementById('error-message');
        const resultsDiv = document.getElementById('results');
        
        const gsInput = document.getElementById('gs-points');
        const thresholdInput = document.getElementById('passing-threshold');

        // --- SUBJECT MANAGEMENT FUNCTIONS ---

        /**
         * Creates and adds a new subject row to the table.
         */
        function addSubjectRow() {
            if (subjectCount >= MAX_SUBJECTS) {
                errorMessage.textContent = `Maximum limit of ${MAX_SUBJECTS} subjects reached.`;
                return;
            }
            errorMessage.textContent = ''; 

            const row = document.createElement('div');
            row.className = 'subject-row';
            row.id = `subject-row-${Date.now() + subjectCount}`; 

            // IMPORTANT: Styles are controlled entirely by CSS now.
            row.innerHTML = `
                <input type="text" placeholder="Subject Name">
                <input type="number" placeholder="Total Points" min="0" step="0.01">
                <input type="number" placeholder="Min Expected" min="0" step="0.01">
                <input type="number" placeholder="Max Expected" min="0" step="0.01">
                <button class="delete-btn" onclick="deleteSubjectRow('${row.id}')">X</button>
            `;

            subjectsContainer.appendChild(row);
            subjectCount++;
        }

        /**
         * Deletes a subject row based on its ID.
         * @param {string} rowId - The unique ID of the row to delete.
         */
        function deleteSubjectRow(rowId) {
            const row = document.getElementById(rowId);
            if (row) {
                subjectsContainer.removeChild(row);
                subjectCount = subjectsContainer.querySelectorAll('.subject-row').length; 
            }
        }
        
        // --- UTILITY FUNCTIONS ---

        /**
         * Determines the color class (green/red) based on a percentage vs. threshold.
         */
        function getColorClass(percentage, threshold) {
            return percentage >= threshold ? 'color-green' : 'color-red';
        }

        /**
         * Determines the overall status box HTML based on min/max outcomes.
         */
        function getOverallStatusHtml(minPassed, maxPassed) {
            if (minPassed && maxPassed) {
                return `<div class="status-box pass">PASS üéâ (No Risk of Failure)</div>`;
            } else if (!minPassed && !maxPassed) {
                return `<div class="status-box fail">FAILED üòî (Expected Grade is Below Threshold)</div>`;
            } else {
                return `<div class="status-box chance">CHANCE OF FAILURE ‚ö†Ô∏è (Outcome Depends on Performance)</div>`;
            }
        }

        // --- CORE CALCULATION AND DISPLAY LOGIC ---

        function runCalculations() {
            errorMessage.textContent = '';
            
            // 1. Get System Settings and Validate
            const gsPoints = parseFloat(gsInput.value);
            const passingThreshold = parseFloat(thresholdInput.value);
            const rows = subjectsContainer.querySelectorAll('.subject-row');

            if (rows.length === 0 || isNaN(gsPoints) || gsPoints <= 0 || isNaN(passingThreshold) || passingThreshold < 0 || passingThreshold > 100) {
                 errorMessage.textContent = 'Please check subject entry and system settings (GS/Threshold).';
                return;
            }
            
            // 2. Aggregate Subject Totals (Tmn, TMn, TnS)
            let Tmn = 0; 
            let TMn = 0; 
            let TnS = 0; 

            for (const row of rows) {
                const inputs = row.querySelectorAll('input');
                const subjectName = inputs[0].value.trim() || 'Unnamed Subject';
                const totalP = parseFloat(inputs[1].value);
                const minE = parseFloat(inputs[2].value);
                const maxE = parseFloat(inputs[3].value);

                if (isNaN(totalP) || isNaN(minE) || isNaN(maxE) || minE > maxE || maxE > totalP || totalP <= 0) {
                    errorMessage.textContent = `Error: Check subject points (Min <= Max <= Total) for '${subjectName}'.`;
                    return;
                }

                Tmn += minE;
                TMn += maxE;
                TnS += totalP;
            }
            
            if (TnS === 0) {
                 errorMessage.textContent = 'Error: Total Possible Points (TnS) for all subjects cannot be zero.';
                 return;
            }

            // 3. Perform Calculations
            const minPct = Tmn / TnS; 
            const maxPct = TMn / TnS; 
            
            const mn = minPct * gsPoints; 
            const Mn = maxPct * gsPoints; 
            const An = (mn + Mn) / 2;     

            const minPct100 = minPct * 100;
            const maxPct100 = maxPct * 100;
            const avgPct100 = (minPct100 + maxPct100) / 2;

            // 4. Status Checks
            const minPassed = minPct100 >= passingThreshold;
            const maxPassed = maxPct100 >= passingThreshold;
            const avgPassed = avgPct100 >= passingThreshold;

            // 5. Generate Organized HTML Output
            
            const overallStatusHtml = getOverallStatusHtml(minPassed, maxPassed);

            const resultsHtml = `
                ${overallStatusHtml}
                <div class="result-section">
                    <h4>Grade (Scaled to GS: ${gsPoints.toFixed(2)})</h4>
                    
                    <div class="result-item">
                        <span>Expected Minimum Grade:</span>
                        <strong class="${getColorClass(minPct100, passingThreshold)}">${mn.toFixed(2)}</strong>
                    </div>
                    <div class="result-item">
                        <span>Expected Maximum Grade:</span>
                        <strong class="${getColorClass(maxPct100, passingThreshold)}">${Mn.toFixed(2)}</strong>
                    </div>
                    <div class="result-item">
                        <span>Average Grade:</span>
                        <strong class="${getColorClass(avgPct100, passingThreshold)}">${An.toFixed(2)}</strong>
                    </div>
                </div>
                
                <div class="result-section">
                    <h4>Percentage (Out of 100%)</h4>
                    
                    <div class="result-item">
                        <span>Expected Minimum Percentage:</span>
                        <strong class="${getColorClass(minPct100, passingThreshold)}">${minPct100.toFixed(2)} / 100%</strong>
                    </div>
                    <div class="result-item">
                        <span>Expected Maximum Percentage:</span>
                        <strong class="${getColorClass(maxPct100, passingThreshold)}">${maxPct100.toFixed(2)} / 100%</strong>
                    </div>
                    <div class="result-item">
                        <span>Expected Average Percentage:</span>
                        <strong class="${getColorClass(avgPct100, passingThreshold)}">${avgPct100.toFixed(2)} / 100%</strong>
                    </div>
                </div>
            `;

            resultsDiv.innerHTML = resultsHtml;
        }

        // --- INITIALIZATION ---
        addSubjectRow();
        addButton.addEventListener('click', addSubjectRow);

    </script>
</body>
</html>
